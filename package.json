{
  "name": "crawler-pg",
  "version": "1.0.0",
  "description": "news crawler",
  "scripts": {
    "build": "tsc --declaration",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "call(){ mocha -r ts-node/register --timeout 30000  \"src/**/*$1.spec.ts\" ; }; call",
    "test-all": "nyc mocha --register ts-node/register --require source-map-support/register --full-trace --bail --timeout 60000 src/**/*.spec.ts",
    "start": "npm run build && node ./dist/crawler.js conf/crawler.json",
    "proc": "npm run build && node ./dist/processor.js --listen 8082 --runner ./runner/lagou"
  },
  "main": "./dist/storage.js",
  "types": "./dist/storage.d.ts",
  "repository": "https://w.snows.io/news/crawler-runner.git",
  "keywords": [
    "crawler",
    "news"
  ],
  "author": "Centny",
  "license": "GPL-3.0",
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "mocha": "^5.1.1",
    "ts-node": "^6.2.0",
    "nyc": "^13.0.1",
    "source-map-support": "^0.5.9"
  },
  "dependencies": {
    "@types/log4js": "^2.3.5",
    "@types/node": "^10.11.3",
    "@types/pg": "^7.4.10",
    "crawler": "file:../crawler",
    "log4js": "^3.0.5",
    "pg": "^7.4.3",
    "typescript": "^2.9.2"
  }
}